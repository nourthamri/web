{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>List books</h1>

    <table class="table" border="2px">
        <thead>
            <tr>
                <th>Title</th>
                <th>PublicationDate</th>
                <th>Enabled</th>
                <th>Category</th>
                <th>Author</th>
                <th>Author Number of books</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.publicationDate ? book.publicationDate|date('F d, Y') : '' }}</td>
                <td>{{ book.enabled ? 'Yes' : 'No' }}</td>
                <td>{{ book.category }}</td>
                <td>{{ book.author.username }}</td>
                <td>{{ book.author.getNbBooks }}</td>
                <td>
                        <a href="{{ path('app_detailsBook', {'ref': book.ref}) }}">Show</a>
                    <a href="{{ path('app_editBooks', {'ref': book.ref}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_AddBook') }}">Create new</a>
{% endblock %}
