{% extends 'base.html.twig' %}

{% block title %}Author Index{% endblock %}

{% block body %}
    <h1>Author List Ordered by Email</h1>

    <table class="table" border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Number of Books</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td>{{ author.id }}</td>
                    <td>{{ author.username }}</td>
                    <td>{{ author.email }}</td>
                    <td>{{ author.getNbBooks() }}</td>
                    <td>
                        <a href="{{ path('app_author_details', {'id': author.id}) }}">show</a>
                        <a href="{{ path('app_edit', {'id': author.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_Add') }}">Create new</a>
{% endblock %}
